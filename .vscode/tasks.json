{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build project (all src)",
      "type": "shell",
      "command": "C:/msys64/ucrt64/bin/g++.exe",
      "args": [
        "-std=c++17",
        "-g",
        "-Iinclude",
        "src/main.cpp",
        "src/searching_algorithms.cpp",
        "src/sorting_algorithms.cpp",
        "-o",
        "app.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
